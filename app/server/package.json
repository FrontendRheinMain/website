{
  "name": "server",
  "version": "0.0.0",
  "description": "ferm server based on ts-node-foundation",
  "main": "index.ts",
  "scripts": {
    "start": "NODE_ENV=production ./node_modules/.bin/ts-node --T --no-cache src/index.ts",
    "develop": "./node_modules/.bin/nodemon -L -e ts",
    "test": "NODE_ENV=testing ./node_modules/.bin/mocha -r ts-node/register src/**/*.spec.ts src/**/**/*.spec.ts ../shared/**/*.ts",
    "cover": "./node_modules/.bin/nyc yarn test"
  },
  "author": "Bernhard Behrendt <bernhard.bezdek@googlemail.com>",
  "license": "MIT",
  "dependencies": {
    "@types/bluebird": "^3.5.24",
    "@types/body-parser": "^1.17.0",
    "@types/request-promise": "^4.1.42",
    "@types/request-promise-native": "^1.0.15",
    "@types/showdown": "^1.7.5",
    "bluebird": "^3.5.2",
    "body-parser": "^1.18.3",
    "debug": "^4.0.1",
    "express": "^4.16.3",
    "mongoose": "^5.3.1",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "request-promise-native": "^1.0.5",
    "showdown": "^1.8.6",
    "ts-node": "^7.0.1",
    "typescript": "^2.9.2"
  },
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/debug": "0.0.30",
    "@types/express": "^4.16.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.11.4",
    "@types/sinon": "^5.0.3",
    "@types/sinon-chai": "^3.2.0",
    "@types/supertest": "^2.0.6",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.4",
    "nyc": "^13.0.1",
    "sinon": "^6.3.5",
    "sinon-chai": "^3.2.0",
    "supertest": "^3.3.0"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "src/index.ts",
      "src/app.ts",
      "src/classes/instance-loader.ts",
      "src/interfaces/*.ts",
      "src/controllers/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov"
    ],
    "all": true
  }
}
