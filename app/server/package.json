{
  "name": "server",
  "version": "0.0.0",
  "description": "ferm server based on ts-node-foundation",
  "main": "index.ts",
  "scripts": {
    "xpostinstall": "yarn run cover",
    "start": "NODE_ENV=production ./node_modules/.bin/ts-node --fast src/index.ts",
    "develop": "./node_modules/.bin/nodemon -L -e ts",
    "test": "NODE_ENV=testing ./node_modules/.bin/mocha -r ts-node/register src/**/*.spec.ts src/**/**/*.spec.ts ../shared/**/*.ts",
    "cover": "./node_modules/.bin/nyc yarn test",
    "daemon": "./node_modules/.bin/pm2 delete -s invitr || : && NODE_ENV=production ./node_modules/.bin/pm2 start --name invitr npm -- start"
  },
  "author": "Bernhard Behrendt <bernhard.bezdek@googlemail.com>",
  "license": "MIT",
  "dependencies": {
    "@types/bluebird": "^3.5.23",
    "@types/body-parser": "^1.17.0",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.3",
    "debug": "^3.1.0",
    "express": "^4.16.3",
    "mongoose": "^5.2.8",
    "pm2": "^3.0.3",
    "ts-node": "^7.0.1",
    "typescript": "^2.9.2"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/debug": "0.0.30",
    "@types/express": "^4.16.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.7.1",
    "@types/sinon": "^5.0.1",
    "@types/sinon-chai": "^3.2.0",
    "@types/supertest": "^2.0.5",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.3",
    "nyc": "^12.0.2",
    "sinon": "^6.1.5",
    "sinon-chai": "^3.2.0",
    "supertest": "^3.1.0"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "src/index.ts",
      "src/app.ts",
      "src/classes/instance-loader.ts",
      "src/interfaces/*.ts",
      "src/controllers/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov"
    ],
    "all": true
  }
}
